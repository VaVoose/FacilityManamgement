<Window x:Class="WpfApp1.ZoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ZoneWindow" Height="450" Width="800">
    <Border Padding="10">
        <Grid>
            <!--Make sure that AutoGenerateColumn is set to false otherwise it will double populate the table-->
            <DataGrid x:Name="dgParts" HorizontalAlignment="Left" Height="379" Margin="10,10,0,0" VerticalAlignment="Top" AutoGenerateColumns="False" Width="148">
                <!--Column Header Text and Bindings-->
                <DataGrid.Columns>
                    <!--The Binding part works like this Binding = {Binding (column in the table that you want to see)}-->
                    <DataGridTextColumn Header="Part" Binding="{Binding partNo}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>


        </Grid>
    </Border>
</Window>
